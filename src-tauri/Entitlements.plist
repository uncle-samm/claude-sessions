<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Bluetooth for cross-device WebAuthn/passkey authentication -->
    <key>com.apple.security.device.bluetooth</key>
    <true/>

    <!-- Allow accessing keychain for credential storage -->
    <key>com.apple.security.personal-information.keychain</key>
    <true/>

    <!-- Network access for OAuth -->
    <key>com.apple.security.network.client</key>
    <true/>
    <key>com.apple.security.network.server</key>
    <true/>

    <!-- Allow opening URLs in external browser -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
</dict>
</plist>
