{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "pty:default",
    "dialog:default",
    "store:default",
    "fs:default",
    "fs:read-all",
    "fs:allow-exists",
    "fs:scope-home-recursive",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/agent-service",
          "sidecar": true,
          "args": true
        }
      ]
    }
  ]
}
