{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main", "oauth-window"],
  "permissions": [
    "core:default",
    "core:webview:allow-create-webview-window",
    "pty:default",
    "dialog:default",
    "store:default",
    "fs:default",
    "fs:read-all",
    "fs:allow-exists",
    "fs:allow-watch",
    "fs:scope-home-recursive",
    "shell:allow-open",
    "deep-link:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/agent-service",
          "sidecar": true,
          "args": true
        }
      ]
    }
  ]
}
