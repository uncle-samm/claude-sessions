{
  "name": "claude-sessions",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "build:sidecar": "cd scripts/agent-service && npm run build && npx pkg dist/index.cjs --target node18-macos-arm64 --output ../../src-tauri/binaries/agent-service-aarch64-apple-darwin",
    "build:sidecar:all": "cd scripts/agent-service && npm run build:all",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "vitest run --config e2e/vitest.config.ts --dir e2e tauri-e2e.test.ts",
    "test:e2e:ci": "vitest run --config e2e/vitest.config.ts --dir e2e webdriver.test.ts",
    "test:e2e:docker": "vitest run && DOCKER=true vitest run --config e2e/vitest.config.ts e2e/docker-e2e.test.ts",
    "test:e2e:docker:build": "docker-compose -f docker-compose.e2e.yml build",
    "test:e2e:docker:run": "docker-compose -f docker-compose.e2e.yml up --abort-on-container-exit",
    "test:all": "npm run test:run && npm run test:e2e"
  },
  "dependencies": {
    "@auth/core": "^0.37.4",
    "@convex-dev/auth": "^0.0.90",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "^2.4.2",
    "@tauri-apps/plugin-fs": "^2.4.4",
    "@tauri-apps/plugin-shell": "^2.3.3",
    "@tauri-apps/plugin-store": "^2.4.1",
    "@xterm/addon-canvas": "^0.7.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-webgl": "^0.18.0",
    "@xterm/xterm": "^5.5.0",
    "convex": "^1.31.0",
    "highlight.js": "^11.11.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "tauri-pty": "^0.1.1",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/vite": "^4.0.0",
    "@tauri-apps/cli": "^2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "@wdio/cli": "^9.23.0",
    "@wdio/local-runner": "^9.23.0",
    "@wdio/mocha-framework": "^9.23.0",
    "@wdio/spec-reporter": "^9.20.0",
    "better-sqlite3": "^12.5.0",
    "jsdom": "^27.4.0",
    "tailwindcss": "^4.0.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vitest": "^4.0.16",
    "webdriverio": "^9.23.0",
    "ws": "^8.18.3"
  }
}
